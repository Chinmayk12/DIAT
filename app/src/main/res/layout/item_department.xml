<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="30dp"
    app:cardBackgroundColor="@color/white_A700"
    android:elevation="5dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        >

        <ImageView
            android:id="@+id/imageViewDepartmentIcon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/administration_logo"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/textViewDepartmentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewDepartmentIcon"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:gravity="center"
            android:fontFamily="@font/interbold"
            android:text="Department Name"
            android:textColor="@color/black"
            android:textSize="13sp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
