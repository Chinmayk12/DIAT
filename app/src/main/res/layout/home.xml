<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BBE1FA"
    tools:context=".Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/navbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/searchViewSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:drawableStart="@drawable/img_rewind"
                    android:background="@drawable/rectangle_bg_gray_900_radius_22"
                    android:gravity="top"
                    android:hint="Find Department"
                    android:textColor="@color/white_A700"
                    android:drawablePadding="10dp"
                    android:textColorHint="@color/white_A700" />

                <FrameLayout
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_46pxh"
                    android:layout_width="@dimen/_46pxh"
                    android:layout_marginStart="@dimen/_15pxh"
                    android:layout_margin="10dp">

                    <ImageButton
                        android:id="@+id/btnProfileiconOne"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circular_bg"
                        android:scaleType="fitCenter"
                        tools:ignore="ContentDescription"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="AB"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/navbar"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#0F4C75"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/ai_branch"
                                android:layout_width="match_parent"
                                android:layout_height="180dp"
                                android:paddingBottom="30dp"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/ai_logo"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="AI"
                                android:textColor="@color/white_A700"
                                android:fontFamily="@font/interbold"
                                android:textSize="25sp"
                                android:layout_gravity="bottom|center"
                                />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#0F4C75"
                        app:cardCornerRadius="30dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/cs_branch"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:paddingBottom="30dp"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/cs_logo"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="CS"
                                android:textColor="@color/white_A700"
                                android:fontFamily="@font/interbold"
                                android:textSize="25sp"
                                android:layout_gravity="bottom|center"
                                />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="30dp"
                        app:cardBackgroundColor="#0F4C75"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/mech_branch"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:paddingBottom="30dp"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/mech_logo"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="Mech"
                                android:textColor="@color/white_A700"
                                android:fontFamily="@font/interbold"
                                android:textSize="25sp"
                                android:layout_gravity="bottom|center"
                                />

                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:layout_margin="10dp"
                        app:cardBackgroundColor="#0F4C75"
                        app:cardCornerRadius="30dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/robo_branch"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:paddingBottom="30dp"
                                android:layout_alignParentTop="true"
                                android:src="@drawable/robot_logo"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:text="Robotics"
                                android:textColor="@color/white_A700"
                                android:fontFamily="@font/interbold"
                                android:textSize="25sp"
                                android:layout_gravity="bottom|center"
                                />

                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/adddeptbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="50dp"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/blue_700"
            app:fabCustomSize="@dimen/_66pxh"
            app:srcCompat="@drawable/img_plus"
            app:tint="@color/gray_900"/>

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:layout_gravity="start"/>


</androidx.drawerlayout.widget.DrawerLayout>
